<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Yeni Tarif Ekle Başlığı -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yeni Tarif Ekle"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Yemek Tarifini Tercihinizi Ayarlayın -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yemek Tarifini Tercihinizi Ayarlayın"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Tarif Adı Girişi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="4dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/editTextRecipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_textfield_noborders"
                android:hint="Tarif Adı"
                android:padding="16dp"/>

        </androidx.cardview.widget.CardView>

        <!-- Kategori Seçimi için RecyclerView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Seçin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_add_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- İçerik Başlığı Girişi -->
        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="İçerik"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="4dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/editTextContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="İçerikleri virgülle ayırın"
                android:background="@drawable/shape_textfield_noborders"
                android:padding="16dp"/>

        </androidx.cardview.widget.CardView>

        <!-- Hazırlanış İfadesi Girişi -->
        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hazırlanış"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="4dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/editTextPreparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_textfield_noborders"
                android:hint="Hazırlanış"
                android:padding="16dp"/>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/buttonGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#000000"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toTopOf="@+id/cardview3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Tarifi Paylaş"
                android:textColor="#FFFFFF"
                android:textSize="20sp">

            </TextView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>




